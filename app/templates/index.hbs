<div class="row">
	<div class="col l6  s6 card center"  id="loginCard">
		<div class="card-content center">
			<b><span class="card-title">LOGIN</span></b>
		</div>
		<div class="row">
			<div class="col s6">
				<span>Username:</span>
			</div>
			<div class="col s6">
				<span>{{input type="text" id="inputfield_username" value=fname}}</span>
			</div>
		</div>
		<div class="row">
			<div class="col s6">
				<span>Password:</span>
			</div>
			<div class="col s6">
				<span>{{input type="password" id="inputfield_password" value=password}}</span>
			</div>
		</div>
		<div class="col s12 center-align push-down">
			<button type="submit" class="btn waves-effect white-text default-color-button" {{action 'save'}}>Log In</button>
		</div>
	</div>
</div>
